{
	"compileOnSave": true,
	"compilerOptions": {
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"module": "commonjs",
		"target": "es2017",
		"outDir": "dist",
		"sourceMap": true,
		"alwaysStrict": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
	},
	"include": ["src"],
	"exclude": ["node_modules", "**/*.spec.ts", "**/__test__/**"]
}
